
body
	position relative
	min-height 600px
	// background-color #dde9e6
	background-color #333
	font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif


.gallery
	position absolute
	display grid
	justify-content center
	align-content center

	@media (min-width 720px)
		top 0
		left 0
		width: calc(95% - 1em)
		height: calc(100vh - 1em)
		grid-auto-rows: calc((calc(100vh - 1em) / 30) - 10px)
		grid-auto-columns: calc((calc(100% - 1em) / 30) - 10px)
		grid-gap 10px

	@media (min-width 960px)
		top 3em
		left 3em
		width: calc(95% - 6em)
		height: calc(100vh - 6em)
		grid-auto-rows: calc((calc(100vh - 6em) / 30) - 20px)
		grid-auto-columns: calc((calc(100% - 6em) / 30) - 20px)
		grid-gap 20px

	&__item
		position relative
		padding 1em
		background-repeat no-repeat
		background-position center
		background-size cover
		cursor pointer
		opacity 0
		box-shadow 0px 0px 10px rgba(17, 17, 17, .8)
		transition opacity .2s, box-shadow .4s, filter .2s
		transition-timing-function linear
		// filter grayscale(100%)
		image-rendering pixelated
		&.loaded
			opacity 1
			box-shadow 4px 4px 20px rgba(17, 17, 17, .8)

		&:before
			content ''
			position absolute
			width 100%
			height 100%
			top 0
			left 0
			background currentColor
			mix-blend-mode exclusion
			opacity 0
			pointer-events none
			transition opacity .2s
		
		&:hover
			filter grayscale(0%)
			&:before
				opacity 1
	


@import 'partials/scrollbar'